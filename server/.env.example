# Environment
NODE_ENV=development
ENV=development
PORT=3000

# Security - JWT Authentication
# REQUIRED: Must be >= 32 characters, different from SESSION_COOKIE_SECRET
JWT_SECRET=your-jwt-secret-here-must-be-at-least-32-chars-long

# Security - Session Cookie Authentication
# REQUIRED: Must be >= 32 characters, different from JWT_SECRET
# Used for HttpOnly session cookies (separate from Bearer JWT)
SESSION_COOKIE_SECRET=your-session-cookie-secret-here-must-be-at-least-32-chars
SESSION_COOKIE_TTL_SECONDS=3600

# Cookie Configuration
# COOKIE_DOMAIN: Leave empty for host-only cookie (recommended for dev)
#                Set to .yourdomain.com for production cross-subdomain cookies
# COOKIE_SAMESITE: Strict | Lax | None (default: Lax)
#                  Use None only for cross-site cookies (requires Secure in prod)
COOKIE_DOMAIN=
COOKIE_SAMESITE=Lax

# SSE Configuration
# ASSISTANT_SSE_TIMEOUT_MS: Timeout for SSE assistant generation (default: 20000ms)
#                           Separate from LLM timeout (2.5s) - allows retries
ASSISTANT_SSE_TIMEOUT_MS=20000

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_GOOGLE_SEARCH=true

# Redis Configuration
ENABLE_REDIS_JOBSTORE=true
ENABLE_REDIS_CACHE=true
REDIS_URL=redis://localhost:6379
REDIS_JOB_TTL_SECONDS=86400
GOOGLE_CACHE_TTL_SECONDS=900

# Intent Cache
CACHE_INTENT=true
INTENT_CACHE_TTL_SECONDS=600

# CORS / Frontend Origins
# Comma-separated list of allowed origins for CORS and WebSocket
# Example: http://localhost:4200,http://localhost:3001
FRONTEND_ORIGINS=http://localhost:4200
CORS_ALLOW_NO_ORIGIN=true

# WebSocket Auth (requires Redis)
WS_REQUIRE_AUTH=true

# Rate Limiting
# RATE_LIMIT_WINDOW_MS: Time window in milliseconds
# RATE_LIMIT_MAX_REQUESTS: Max requests per window
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Debug (production only)
# DEBUG_KEY: Required for /api/v1/debug/* endpoints in production
DEBUG_KEY=
