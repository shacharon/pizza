{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server: debug (tsx)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect-brk", "--loader", "tsx"],
      "program": "${workspaceFolder}/src/server.ts",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Attach to Node (9229)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
