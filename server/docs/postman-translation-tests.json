    },
    {
      "name": "Test 3: Same Places (Compare placeId)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/api/places/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "places", "search"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"pizza gluten free in gedera\",\n  \"userLocation\": null,\n  \"nearMe\": false,\n  \"schema\": null\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save placeIds from English query",
              "var jsonData = pm.response.json();",
              "var placeIds = jsonData.restaurants.map(r => r.placeId);",
              "pm.environment.set(\"englishPlaceIds\", JSON.stringify(placeIds));",
              "",
              "pm.test(\"Saved placeIds for comparison\", function () {",
              "    pm.expect(placeIds.length).to.be.greaterThan(0);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Test 4: Hebrew → French (Paris)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/api/places/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "places", "search"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"פיצה בפריז\",\n  \"userLocation\": null,\n  \"nearMe\": false,\n  \"schema\": null\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has restaurants\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.restaurants).to.be.an('array');",
              "});",
              "",
              "pm.test(\"Results translated back to Hebrew\", function () {",
              "    var jsonData = pm.response.json();",
              "    if (jsonData.restaurants.length > 0) {",
              "        var firstPlace = jsonData.restaurants[0];",
              "        // Address should contain Hebrew (translated back)",
              "        pm.expect(firstPlace.address).to.match(/[\\u0590-\\u05FF]/);",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
