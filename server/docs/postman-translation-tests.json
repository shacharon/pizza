{
  "info": {
    "name": "Places Translation Tests",
    "description": "Test cases for multi-language translation in Places search",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Test 1: English → Hebrew (Gedera)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/api/places/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "places", "search"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"pizza gluten free in gedera\",\n  \"userLocation\": null,\n  \"nearMe\": false,\n  \"schema\": null\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has restaurants\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.restaurants).to.be.an('array');",
              "    pm.expect(jsonData.restaurants.length).to.be.greaterThan(0);",
              "});",
              "",
              "pm.test(\"Results are in English\", function () {",
              "    var jsonData = pm.response.json();",
              "    var firstPlace = jsonData.restaurants[0];",
              "    // Check if address contains English characters (not Hebrew)",
              "    pm.expect(firstPlace.address).to.not.match(/[\\u0590-\\u05FF]/);",
              "});"
            ]
          }
        }
      ]
    },
